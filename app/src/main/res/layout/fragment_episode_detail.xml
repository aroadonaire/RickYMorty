<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rick_dark"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="NOMBRE DEL EPISODIO"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SxxExx"
        android:textColor="@color/rick_neon"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvAirDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de emisión"
        android:textColor="@color/white"
        android:alpha="0.7"
        app:layout_constraintTop_toBottomOf="@id/tvCode"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"/>

    <Switch
        android:id="@+id/switchWatched"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Visto?"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:thumbTint="@color/rick_neon"
        app:trackTint="@color/rick_yellow"
        app:layout_constraintTop_toBottomOf="@id/tvAirDate"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/detailDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/rick_neon"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/switchWatched" />

    <TextView
        android:id="@+id/tvCharactersTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PERSONAJES DEL EPISODIO"
        android:textColor="@color/rick_yellow"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/detailDivider"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCharacters"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvCharactersTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clipToPadding="false"
        android:paddingBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

